<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

<!--   스크롤뷰 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/poster_event_detail"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorG"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title_event_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="28dp"
                    android:text="제목"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/date_event_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:text="전시기간"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_event_detail" />

                <TextView
                    android:id="@+id/number_people_event_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="당첨인원"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date_event_detail" />

                <TextView
                    android:id="@+id/period_event_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="이벤트 기한"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/number_people_event_detail" />

                <TextView
                    android:id="@+id/date_event_detail_real"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="36dp"
                    android:text="2021-0-0"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/date_event_detail"
                    app:layout_constraintTop_toBottomOf="@+id/title_event_detail" />

                <TextView
                    android:id="@+id/number_people_event_detail_real"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="28dp"
                    android:text="00"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/number_people_event_detail"
                    app:layout_constraintTop_toBottomOf="@+id/date_event_detail_real" />


                <TextView
                    android:id="@+id/start_date_event_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    android:text="시작일"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/period_event_detail"
                    app:layout_constraintTop_toBottomOf="@+id/number_people_event_detail_real" />

                <TextView
                    android:id="@+id/wave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="28dp"
                    android:text="~"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/end_date_event_detail"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toEndOf="@+id/period_event_detail"
                    app:layout_constraintTop_toBottomOf="@+id/number_people_event_detail_real" />

                <TextView
                    android:id="@+id/end_date_event_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:text="종료일"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/start_date_event_detail"
                    app:layout_constraintTop_toBottomOf="@+id/number_people_event_detail_real" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/contents_event_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용입니다."
                android:textSize="20sp"
                />

           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />

        </LinearLayout>
    </ScrollView>

<!-- 하단고정 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_event_enter"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="이벤트 응모하기" />

    </LinearLayout>
</LinearLayout>

