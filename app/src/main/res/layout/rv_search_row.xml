<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_searchFrag"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#ffffff">
        <androidx.cardview.widget.CardView
            android:id="@+id/rv_cv_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorG"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/rv_img1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/app_logo">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_title_search_rv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/rv_cv_image"
            android:text="전시회 제목"
            android:textColor="@color/black"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv_title_search_rv"
            android:text="찜하기"
            android:textColor="@color/black"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:id="@+id/tv_place_search_rv"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_title_search_rv"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/rv_cv_image"
            android:text="전시 장소"
            android:textColor="@color/black"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/rv_cv_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/rv_cv_image"
            android:textColor="@color/black">

        </TextView>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>


