<?xml version="1.0" encoding="utf-8"?>
<!--프래그먼트3은 피드 화면-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarFadeDuration="0"
    android:scrollbarSize="0dp"

    android:id="@+id/ticketbox_container"
    >

    <LinearLayout
        android:id="@+id/myticket_big_title"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/myticket_big_title2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorGrey"
            android:layout_marginVertical="15dp"
            android:text="내 티켓"/>



    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ticketbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myticket_big_title"
        android:layout_marginTop="26dp"
        android:background="@color/white"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="0dp"
        android:scrollbarThumbVertical="@color/colorG"
        android:scrollbars="vertical" />


</RelativeLayout>

